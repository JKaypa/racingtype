{
    "compilerOptions": {
        "target": "ESNext",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "rootDir": ".",
        "baseUrl": "./",
        "paths": {
            "~/*": ["./*"],
            "~typescript/*": ["./public/typescript/*"]
        },
        "resolveJsonModule": true,
        "allowJs": true,
        "outDir": "./build",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "skipLibCheck": true
    },
    "include": ["./src/**/*", "./public/**/*", "./types/**/*"],
    "exclude": ["public/typescript"]
}
